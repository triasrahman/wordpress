{
    "name": "triasrahman/wordpress",
    "description": "Cool wordpress boilerplate using Composer.",
    "keywords": ["wordpress", "dotenv", "boilerplate"],
    "license": "MIT",
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.4",
        "johnpbloch/wordpress": "^4.3",
        "vlucas/phpdotenv": "^2.1@dev",
        "fancyguy/wordpress-monolog": "dev-master",
        "wpackagist-theme/twentyfifteen": "^1.3"
    },
    "authors": [
        {
            "name": "Trias Nur Rahman",
            "email": "contact@triasrahman.com"
        }
    ],
    "extra": {
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "assets/plugins/{$name}/": ["type:wordpress-plugin"],
            "assets/themes/{$name}/": ["type:wordpress-theme"],
            "assets/mu-plugins/{$name}/": ["type:wordpress-muplugin"]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
